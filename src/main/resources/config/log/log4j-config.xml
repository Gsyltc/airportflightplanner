<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="com.airportflightplanner.flightplancreation.panels.CreationTimePanel" level="error">
            <AppenderRef ref="Console" />
        </Logger>

        <Logger name="com.airportflightplanner.flightplancreation.panels.FlightPlanCreationPanel" level="error">
            <AppenderRef ref="Console" />
        </Logger>

        <Logger name="com.airportflightplanner.flightplancreation.panels.CreationFlightInfosPanel" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.airportflightplanner.flightplancreation.model.FlightInfosModel" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.airportflightplanner.flightplancreation.panels.CreationStartDaysPanel" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.airportflightplanner.main.visualelements.panels.WaypointEditionPanel" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.airportflightplanner.flightplanvisualization.panel.FlightPlanListPanel" level="error">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.airportflightplanner.waypointmodifications.panels.WaypointTextPanel" level="debug">
            <AppenderRef ref="Console" />
        </Logger>
    </Loggers>
</Configuration>